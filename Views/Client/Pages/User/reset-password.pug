extends ../../Layout/default.pug
include ../../Mixin/alert.pug
include ../../Mixin/box-head.pug
block main

  .container.mt-80
    .row.justify-content-center
      .col-8
        +box-head("Đổi Mật Khẩu")
        form(
          action="/user/password/reset"
          method="POST"
        )
          div(class="form-group")
            label(for="password") Mật khẩu mới
            input(
              type="password"
              class="form-control"
              id="password"
              name="password"
              required
            )
          div(class="form-group")
            label(for="confirmPassword") Xác nhận mật khẩu
            input(
              type="password"
              class="form-control"
              id="confirmPassword"
              name="confirmPassword"
              required
            )
          div(class="form-group")
            button(
              type="submit"
              class="btn btn-secondary btn-block"
            ) Đổi mật khẩu