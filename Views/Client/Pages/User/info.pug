extends ../../Layout/default.pug
include ../../Mixin/box-head.pug

block main
  .container.mt-80
    .row
      .col-12
        +box-head("Thông tin tài khoản")
    .row 
        .col-12.text-center
            a(href="/user/password/reset" class="btn btn-dark btn-block d-inline") Đổi Mật Khẩu Ở Đây
    .container
        .row.justify-content-center
            .col-8 
                form(
                action="/user/info"
                method="POST"
                )
                    div(class="form-group")
                        label(for="email") Email
                        input(
                        type="email"
                        class="form-control"
                        id="email"
                        name="email"
                        value = user.email
                        required
                        )
                    div(class="form-group")
                        label(for="fullName") Họ Tên
                        input(
                        class="form-control"
                        id="fullName"
                        name="fullName"
                        value = user.fullName
                        required
                        )
                    div(class="form-group")
                        label(for="phone") Số Điện Thoại
                        input(
                        class="form-control"
                        id="phone"
                        name="phone"
                        value = user.phone
                        required
                        )
                    div(class="form-group")
                        label(for="address") Địa Chỉ
                        input(
                        class="form-control"
                        id="address"
                        name="address"
                        value = user.address
                        required
                        )
                    div(class="form-group")
                        button(
                        type="submit"
                        class="btn btn-secondary btn-block"
                        ) Sửa Thông Tin
    
                