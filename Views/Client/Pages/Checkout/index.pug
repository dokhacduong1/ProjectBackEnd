extends ../../Layout/default.pug
include ../../Mixin/box-head.pug
include ../../Mixin/alert.pug

block main
  +alert-success(5000)
  +alert-error(5000)

  .container.my-3
    .row
      .col-12
        +box-head("Đặt hàng")


    .row
      .col-12
        table(class="table table-bordered")
          thead
            tr
              th STT
              th Ảnh
              th Tên
              th Giá
              th Số lượng
              th Tổng tiền
          tbody
            if(cartDetail.productInfo.length > 0)
              each item, index in cartDetail.productInfo
                tr
                  td #{index + 1}
                  td
                    img(
                      src=item.thumbnail
                      alt=item.title
                      width="80px"
                    )
                  td #{item.title}
                  td #{item.priceNew}<u>đ</u>
                  td #{item.quantity}
                  td #{item.totalProduct}<u>đ</u>
            else
              tr
                td(
                  colspan="7"
                  class="text-center"
                ) Giỏ hàng trống.
        if(cartDetail.products.length > 0)
          h3(class="text-right") Tổng đơn hàng: #{cartDetail.totalPrice}<u>đ</u>
    if(cartDetail.productInfo.length > 0)
      .row
        .col-12
          .card.p-4.my-4
            form(
              action="/checkout/order"
              method="POST"
            )
              div(class="form-group")
                label(for="fullName") Họ tên
                input(
                  type="text"
                  class="form-control"
                  id="fullName"
                  name="fullName"
                  required
                )
              div(class="form-group")
                label(for="phone") Số điện thoại
                input(
                  type="text"
                  class="form-control"
                  id="phone"
                  name="phone"
                  required
                )
              div(class="form-group")
                label(for="address") Địa chỉ
                input(
                  type="text"
                  class="form-control"
                  id="address"
                  name="address"
                  required
                )
              div(class="form-group")
                button(
                  type="submit"
                  class="btn btn-success btn-block"
                ) ĐẶT HÀNG


    
            