extends ../../Layout/default.pug

block main
  if(role.permissions.includes("blogs_view"))
    if (record.title)
      h1(class="mb-4") #{record.title}
    if (record.thumbnail)
      div(class="mb-4")
        img(
          src=record.thumbnail
          style="width: 100px"
        )

    if (record.status)
      div(class="mb-4")
        span Trạng thái:
        if (record.status === "active")
          span(class="badge badge-success") Hoạt động
        else
          span(class="badge badge-danger") Dừng hoạt động

    if (record.position)
      div(class="mb-4") Vị trí: <b>#{record.position}</b>

    if (record.description)
      div(class="mb-4") !{record.description}
    if (record.content)
      div(class="mb-4") !{record.content}

    a(
      href=`${prefixAdmin}/blogs/edit/${record.id}`
      class="btn btn-warning"
    ) Chỉnh sửa

    script(src="/Admin/Js/products.js")